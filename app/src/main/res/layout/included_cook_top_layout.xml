<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/included_cook_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorOrange"
        android:gravity="end">

<!--        schedule view-->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            app:cardCornerRadius="200dp">

            <LinearLayout
                android:id="@+id/schedule_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorText"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/schedule_order_image"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:src="@mipmap/placeholder_image"
                    android:scaleType="centerCrop"
                    app:civ_border_width="0dp"
                    app:civ_border_color="@color/violetShade" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/schedule_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Italian Spaghetti..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/schedule_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Scheduled 6:30 AM"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bell"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_power" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for dish or ingredient"
        android:textColorHint="@color/black"
        android:textSize="14sp"
        android:drawableLeft="@drawable/ic_search"
        android:drawableTint="@color/colorText"
        android:drawablePadding="8dp"
        android:padding="8dp"
        android:layout_marginVertical="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_layout" />

</LinearLayout>
